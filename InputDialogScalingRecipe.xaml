<Window x:Class="RecipeApplicationWPF.InputDialogScalingRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplicationWPF"
        mc:Ignorable="d"
        Title="InputDialogScalingRecipe" Height="450" Width="800">
    <StackPanel Margin="10">
        <!-- Message Label for displaying instructions or messages -->
        <Label x:Name="MessageLabel" Content="Enter the recipe title to scale:" Margin="0,0,0,10"/>

        <!-- Text Box for user input -->
        <TextBox x:Name="InputTextBox" Margin="0,0,0,10"/>

        <!-- Buttons for OK and Cancel actions -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Click="OKButton_Click" Margin="5,0"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click" Margin="5,0"/>
        </StackPanel>
    </StackPanel>
</Window>
